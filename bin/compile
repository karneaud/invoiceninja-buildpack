#!/usr/bin/env bash
version="v${INVOICENINJA_VERSION}"
# install invoiceninja from github 
echo "Installing Invoice Ninja ${version} $BUILD_DIR"
cd $BUILD_DIR
pwd $BUILD_DIR
#wget -q https://github.com/invoiceninja/invoiceninja/archive/master.zip && tar -xzf master.zip --strip-components=1 --directory=app && rm master.zip
#curl https://github.com/invoiceninja/invoiceninja/archive/$version.zip -L -o master.zip
ls -la
unzip -q ${version}.zip
echo "Unziped Invoice Ninja ${version} to $BUILD_DIR"
cp -R -n invoiceninja-"${version/#v/}"/* ./
chmod -R 0777 ./storage
rm ${version}.zip
rm -rf invoiceninja-"${version/#v/}"
